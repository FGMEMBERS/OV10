<?xml version="1.0"?>

<PropertyList>
  <name>ATC2</name>
  <w-base>100</w-base>
  <h-base>100</h-base>
  <layers>
    <layer>
      <name>radar heading</name>
      <texture>
        <path>Aircraft/ATC-rmsjr/transparent.rgb</path>
        <x1>0</x1>
        <y1>0</y1>
        <x2>1</x2>
        <y2>1</y2>
      </texture>
      <emissive>true</emissive>
      <w>100</w>
      <h>100</h>
    </layer>
    <layer>
      <name>ground network</name>
      <texture>
        <path>Aircraft/Instruments/Textures/od_groundradar.rgb</path>
        <x1>0</x1>
        <y1>0</y1>
        <x2>1</x2>
        <y2>1</y2>
      </texture>
      <emissive>true</emissive>
      <w>100</w>
      <h>100</h>
      <transformations>
        <transformation>
          <type>rotation</type>
          <property>environment/magnetic-variation-deg</property>
          <scale>-1</scale>
        </transformation>
      </transformations>
    </layer>
    <layer>
      <name>wxradar</name>
      <texture>
        <path>Aircraft/Instruments/Textures/od_wxradar.rgb</path>
        <x1>0</x1>
        <y1>0</y1>
        <x2>1</x2>
        <y2>1</y2>
      </texture>
      <emissive>true</emissive>
      <w>100</w>
      <h>100</h>
    </layer>
  </layers>
  <actions>
    <action>
      <name>outline</name>
      <x>-256</x>
      <y>-256</y>
      <w>512</w>
      <h>512</h>
      <binding>
      </binding>
    </action>
  </actions>
</PropertyList>