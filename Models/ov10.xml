 <animation>
  <type>select</type>
  <object-name>PropBlurLeft</object-name>
  <condition>
   <greater-than>
    <property>engines/engine[0]/thrust_lb</property>
    <value>200</value>
   </greater-than>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>PropBlurRight</object-name>
  <condition>
   <greater-than>
    <property>engines/engine[1]/thrust_lb</property>
    <value>200</value>
   </greater-than>
  </condition>
 </animation>

 <animation>
  <type>spin</type>
  <object-name>PropLeft</object-name>
  <property>engines/engine[0]/thrust_lb</property>
  <factor>1.0</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>-2.14</y-m>
   <z-m>-0.13</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>spin</type>
  <object-name>PropBlurLeft</object-name>
  <property>engines/engine[0]/thrust_lb</property>
  <factor>1.0</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>-2.14</y-m>
   <z-m>-0.13</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>spin</type>
  <object-name>PropRight</object-name>
  <property>engines/engine[0]/thrust_lb</property>
  <factor>-1.0</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>2.14</y-m>
   <z-m>-0.13</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>spin</type>
  <object-name>PropBlurRight</object-name>
  <property>engines/engine[0]/thrust_lb</property>
  <factor>-1.0</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>2.14</y-m>
   <z-m>-0.13</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
