<?xml version="1.0"?>

<!-- OV-10 weapon station fire/off/drop switches, by Julien Pierru -->

<PropertyList>

 <path>weapons-panel.ac</path>

 <!--animation>
  <type>material</type>
  <object-name>switchbox</object-name>
   <emission>
     <red>0.6</red>
     <green>0.3</green>
     <blue>0.3</blue>
    <factor-prop>controls/lighting/instruments-norm</factor-prop>
   </emission> 
 </animation-->

 <animation> 
   <type>select</type>
    <object-name>L_READY</object-name>
    <condition>
     <property>controls/armament/g_ready</property>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>L_CLEAR</object-name>
    <condition>
     <not>
     <property>controls/armament/g_ready</property>
     </not>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>R_READY</object-name>
    <condition>
     <property>controls/armament/g_ready</property>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>R_CLEAR</object-name>
    <condition>
     <not>
     <property>controls/armament/g_ready</property>
     </not>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>MK4_READY</object-name>
    <condition>
     <property>controls/armament/mk4_ready</property>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>MK4_CLEAR</object-name>
    <condition>
     <not>
     <property>controls/armament/mk4_ready</property>
     </not>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>ARM_NOSE</object-name>
    <condition>
     <property>controls/armament/arm_nose</property>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>ARM_TAIL</object-name>
    <condition>
     <not>
     <property>controls/armament/arm_nose</property>
     </not>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>MASTER_ON</object-name>
    <condition>
     <property>controls/armament/master-arm</property>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>MASTER_OFF</object-name>
    <condition>
     <not>
      <property>controls/armament/master-arm</property>
     </not>
    </condition>
 </animation>

 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>50</max-m>
 </animation>

</PropertyList>
