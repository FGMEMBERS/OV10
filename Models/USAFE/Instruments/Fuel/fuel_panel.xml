<?xml version="1.0"?>

<!-- OV10 fuel panel, by Julien Pierru -->

<PropertyList>

 <path>fuel_panel.ac</path> 
 
 <!-- *** Switch animation *** -->
 <animation> 
   <type>select</type>
    <object-name>ext_on</object-name>
    <condition>
     <property>controls/external-tank/is-feeding</property>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>ext_off</object-name>
    <condition>
     <not>
      <property>controls/external-tank/is-feeding</property>
     </not>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>test_on</object-name>
    <condition>
     <property>controls/fuel-gage-test</property>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>test_off</object-name>
    <condition>
     <not>
      <property>controls/fuel-gage-test</property>
     </not>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>shutoff_norm1</object-name>
    <condition>
     <not>
      <property>controls/fuel-cutoff1</property>
     </not>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>shutoff_off1</object-name>
    <condition>
     <property>controls/fuel-cutoff1</property>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>shutoff_norm2</object-name>
    <condition>
     <not>
      <property>controls/fuel-cutoff2</property>
     </not>
    </condition>
 </animation>

 <animation> 
   <type>select</type>
    <object-name>shutoff_off2</object-name>
    <condition>
     <property>controls/fuel-cutoff2</property>
    </condition>
 </animation>

 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
