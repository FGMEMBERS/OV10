	<animation>
		<type>select</type>
		<object-name>CDme</object-name>
		<object-name>DDme</object-name>
		<object-name>UDme</object-name>
		<condition>
				<equals>
					<property>instrumentation/heading-indicator/switch-tacan-acls</property>
					<value>1</value>
				</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>CTacan</object-name>
		<object-name>DTacan</object-name>
		<object-name>UTacan</object-name>
		<condition>
			<equals>
				<property>instrumentation/heading-indicator/switch-tacan-acls</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>UDme</object-name>
		<property>/instrumentation/dme/indicated-distance-nm</property>
		<factor>0.1</factor>
		<step>1</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>DDme</object-name>
		<property>/instrumentation/dme/indicated-distance-nm</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>CDme</object-name>
		<property>/instrumentation/dme/indicated-distance-nm</property>
		<factor>0.001</factor>
		<step>100</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>UTacan</object-name>
		<property>/instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.1</factor>
		<step>1</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>DTacan</object-name>
		<property>/instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>-1</y>
