<PropertyList>

	<path>hi-f8e.ac</path>
	
	<animation>
		<type>noshadow</type>
		<object-name>HI</object-name>
	</animation>

	<model>
		<name>Bezel</name>
		<path>Aircraft/OV10/Models/USAFE/Instruments/BDHI/Bezel-f8e.xml</path>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>




	<animation include="Instrument-Light1.xml">
		<object-name>Rose-I</object-name>
	</animation>

	<animation include="Instrument-Light4.xml">
		<object-name>Aiguille1</object-name>
		<object-name>Aiguille1-Tacan</object-name>
		<object-name>Aiguille1-Adf</object-name>
		<object-name>Aiguille1-Nav</object-name>
		<object-name>Aiguille1-Dummy</object-name>
		<object-name>Aiguille2</object-name>
		<object-name>Aiguille2-Tacan</object-name>
		<object-name>Aiguille2-Adf</object-name>
		<object-name>Aiguille2-Nav</object-name>
	</animation>

	<animation include="Instrument-Light1.xml">
		<object-name>Cadran</object-name>
	</animation>

	<animation include="Instrument-Light3.xml">
		<object-name>Select-Nav</object-name>
		<object-name>Select-Tacan</object-name>
	</animation>

	<animation include="Instrument-Light3.xml">
		<object-name>CDme</object-name>
		<object-name>DDme</object-name>
		<object-name>UDme</object-name>
	</animation>

	<animation include="Instrument-Light3.xml">
		<object-name>CTacan</object-name>
		<object-name>DTacan</object-name>
		<object-name>UTacan</object-name>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Cadran</object-name>
		<property>/orientation/heading-magnetic-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>



	<!--     switch    ACLS = 1, Tacan = 0,              .-->
	<!--nav-switch    Manuel = 0 ,3   ADF  = 1  NAV =2  Dummy = 9-->

	<animation>
		<type>select</type>
		<object-name>Aiguille1</object-name>
		<condition>
			<and>
				<equals>
					<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
					<value>10</value>
				</equals>
				<or>
					<equals>
						<property>/instrumentation/heading-indicator/nav-switch</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/instrumentation/heading-indicator/nav-switch</property>
						<value>30</value>
					</equals>
				</or>
			</and>
		</condition>
 	</animation>


	<animation>
		<type>select</type>
		<object-name>Aiguille1-Tacan</object-name>
		<condition>
			<!--equals>
				<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
				<value>0</value>
			</equals-->
			<equals>
				<property>instrumentation/heading-indicator/nav-switch</property>
				<value>90</value>
			</equals>
		</condition>
 	</animation>

	<!--animation>
		<type>select</type>
		<object-name>Aiguille1-Adf</object-name>
		<condition>

			<equals>
				<property>instrumentation/heading-indicator/nav-switch</property>
				<value>1</value>
			</equals>
			<equals>
				<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
				<value>0</value>
			</equals>

		</condition>
 	</animation-->

	<animation>
		<type>select</type>
		<object-name>Aiguille1-Nav</object-name>
		<condition>
			<and>
			<equals>
				<property>instrumentation/heading-indicator/nav-switch</property>
				<value>2</value>
			</equals>
			<equals>
				<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
				<value>1</value>
			</equals>
			<equals>
				<property>instrumentation/heading-indicator/nav-switch</property>
				<value>90</value>
			</equals>
			</and>
		</condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>Aiguille1-Dummy</object-name>
		<condition>
				<equals>
					<property>instrumentation/heading-indicator/nav-switch</property>
					<value>90</value>
				</equals>
		</condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>Aiguille2</object-name>
		<condition>
			<equals>
				<property>instrumentation/heading-indicator/nav-switch</property>
				<value>90</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Aiguille2-Tacan</object-name>
		<condition>
			<!--equals>
				<property>instrumentation/heading-indicator/nav-switch</property>
				<value>9</value>
			</equals-->
			<equals>
				<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Aiguille2-Adf</object-name>
		<condition>
			<equals>
				<property>instrumentation/heading-indicator/nav-switch</property>
				<value>90</value>
			</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Aiguille2-Nav</object-name>
		<condition>
			<equals>
				<property>instrumentation/heading-indicator/nav-switch</property>
				<value>8</value>
			</equals>
		</condition>
	</animation>



