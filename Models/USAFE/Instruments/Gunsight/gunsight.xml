<?xml version="1.0"?>

<!-- OV-10 gunsight, by Dave Culp -->

<PropertyList>

 <path>gunsight.ac</path>

 <!-- pipper on/off -->
 <animation>
  <type>select</type>
  <object-name>noshadow.pipper</object-name>
  <condition>
   <property>controls/armament/gunsight/power-on</property>
  </condition>
 </animation>  

 <!-- pipper brightness -->
 <animation>
  <type>material</type>
  <object-name>noshadow.pipper</object-name>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>1.0</blue>
   <factor-prop>controls/armament/gunsight/intensity</factor-prop>
  </emission>
 </animation>

 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>50</max-m>
 </animation>

</PropertyList>
